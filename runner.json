{
    "info": {
        "name": "Users API Runner",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}:{{PORT}}/{{VERSION}}/users",
                    "host": [
                        "{{baseUrl}}:{{PORT}}"
                    ],
                    "path": [
                        "{{VERSION}}",
                        "users"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"action\": \"register\",\n    \"lastName\": \"Doe\",\n    \"firstName\": \"John\",\n    \"email\": \"test{{timestamp}}@mail.com\",\n    \"password\": \"password123\",\n    \"boat_license_number\": \"123456\"\n}"
                }
            },
            "response": []
        },
        {
            "name": "Login User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}:{{PORT}}/{{VERSION}}/users",
                    "host": [
                        "{{baseUrl}}:{{PORT}}"
                    ],
                    "path": [
                        "{{VERSION}}",
                        "users"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"action\": \"login\",\n    \"email\": \"test{{timestamp}}@mail.com\",\n    \"password\": \"password123\"\n}"
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"vault:json-web-token\", jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Get All Users",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{vault:json-web-token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}:{{PORT}}/{{VERSION}}/users",
                    "host": [
                        "{{baseUrl}}:{{PORT}}"
                    ],
                    "path": [
                        "{{VERSION}}",
                        "users"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get User by ID",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{vault:json-web-token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}:{{PORT}}/{{VERSION}}/users?user_id={{user_id}}",
                    "host": [
                        "{{baseUrl}}:{{PORT}}"
                    ],
                    "path": [
                        "{{VERSION}}",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "user_id",
                            "value": "{{user_id}}"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Modify User",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{vault:json-web-token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}:{{PORT}}/{{VERSION}}/users",
                    "host": [
                        "{{baseUrl}}:{{PORT}}"
                    ],
                    "path": [
                        "{{VERSION}}",
                        "users"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"user_id\": \"{{user_id}}\",\n    \"lastName\": \"DoeModified\",\n    \"firstName\": \"JohnModified\",\n    \"email\": \"modified{{timestamp}}@mail.com\",\n    \"boat_lisense_number\": \"654321\"\n}"
                }
            },
            "response": []
        },
        {
            "name": "Delete User",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{vault:json-web-token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}:{{PORT}}/{{VERSION}}/users",
                    "host": [
                        "{{baseUrl}}:{{PORT}}"
                    ],
                    "path": [
                        "{{VERSION}}",
                        "users"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"user_id\": \"{{user_id}}\"\n}"
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://127.0.0.1"
        },
        {
            "key": "timestamp",
            "value": "{{$timestamp}}"
        },
        {
            "key": "vault:json-web-token",
            "value": ""
        },
        {
            "key": "user_id",
            "value": "1"
        },
        {
            "key": "PORT",
            "value": "5000"
        },
        {
            "key": "VERSION",
            "value": "v1"
        }
    ]
}